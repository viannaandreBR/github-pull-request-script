{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "sourceMap": false,
    "noEmitOnError": false,
    "types": ["node"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "target": "es5",
    "module": "CommonJS"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*", "**/*.test.ts"]
}
